---
import "~styles/global.css";
import "~styles/normalize.css";
import "~styles/variables.css";
import Footer from "~components/Footer.astro";
import Ogimage from "~assets/ogImage/ogImageh.png";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;

const ogImageUrl = new URL(Ogimage.src, Astro.url);
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Meta -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="alternate icon"
      type="image/png"
      href="/HEAD/favicon-96x96.png"
      sizes="96x96"
    />
    <link rel="icon" type="image/svg+xml" href="/HEAD/favicon.svg" />
    <link rel="shortcut icon" href="/HEAD/favicon.ico" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/HEAD/apple-touch-icon.png"
    />
    <meta name="apple-mobile-web-app-title" content="Head" />
    <link rel="manifest" href="/HEAD/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>&#x1F92F; {title}</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:image" content={ogImageUrl} />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:image" content={ogImageUrl} />
  </head>
  <body>
    <div
      class="flex flex-col flex-wrap justify-between min-h-screen px-2 lg:px-4 py-0 mx-0 sm:mx-auto my-2 lg:my-4"
    >
      <main class="w-full mx-0 my-auto">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
