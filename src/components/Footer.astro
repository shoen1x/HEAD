---
import { Picture } from "astro:assets";
import NMVX from "~assets/nmvxlogo.svg";
---

<footer
  class="flex w-full items-center justify-center pt-6 pb-12 text-2xl leading-tight"
>
  <a
    href="https://nmvx.vercel.app/"
    target="_blank"
    class="inline-flex items-center text-base"
  >
    <span class="mr-3 block">Ditempa oleh</span>
    <Picture
      src={NMVX}
      width="128"
      height="52"
      alt="Head by NMVX Homepage"
      formats={["avif", "webp", "png"]}
      loading="lazy"
    />
  </a>
</footer>
