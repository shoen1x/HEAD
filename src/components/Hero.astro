---
import HeadLogo from "~assets/brand/headlogo-dark.svg";
import Background from "~assets/background.svg";
import Github from "~assets/github.svg";
import { Picture } from 'astro:assets';
import MinDisyorkan from "~kandungan/data/MinDisyorkan.astro";
---

<div id="container" class="text-white m-2 md:flex md:flex-col">
  <div class="inline-block relative w-full h-full overflow-hidden rounded-lg">
    <Picture
      id="background"
      class="fixed top-0 left-0 w-full h-full -z-1 blur-3xl"
      src={Background}
      alt="Nirduan Crystalis Blue Background"
      formats={['avif', 'webp']}
    />
    <div class="absolute left-0 top-0 h-full w-full"></div>
  </div>
  <main class="h-full flex justify-center w-full md:block">
    <section class="flex flex-col lg:flex-row items-center justify-between m-0.5 lg:m-10 gap-4 lg:gap-12">
      <div class="flex flex-col items-center lg:max-w-[512px] gap-4 lg:gap-6">
        <div class="inline-block relative h-full items-center justify-center w-auto overflow-hidden">
          <Picture
            src={HeadLogo}
            alt="Head by NMVX Homepage"
            id="Head Logo"
            width="512"
            formats={['avif', 'webp']}
          />
          <div class="absolute left-0 top-0 h-full w-full"></div>
        </div>
        <h1 class="font-bold text-9xl">
          Panduan ringkas untuk elemen <code>&#60;head&#62;</code> HTML
        </h1>
        <div class="flex flex-col h-full w-full justify-start items-start gap-4">
          <h4>
            Terjemahan dalam <abbr title="Malay (بهاس ملايو) is an Austronesian language that is an official language of Brunei, Malaysia, and Singapore.">Bahasa Melayu</abbr> oleh <a
              class="font-medium underline"
              href="https://nmvx.vercel.app/">shoen1x</a>
          </h4>
          <div class="flex flex-row w-full h-full justify-start gap-4">
            <a
              class="font-medium underline"
              href="https://github.com/shoen1x/HEAD/graphs/contributors"
              ><img
                src="https://img.shields.io/github/contributors/shoen1x/HEAD?style=for-the-badge&label=Penyumbang"
                class="rounded-lg"
                alt="lambang perisai Penyumbang"
              /></a
            >
            <a
              class="font-medium underline"
              href="https://creativecommons.org/publicdomain/zero/1.0/"
              ><img
                src="https://img.shields.io/badge/license-CC0-green.svg?style=for-the-badge&label=Lesen"
                class="rounded-lg"
                alt="lambang perisai Penyumbang"
              /></a
            >
            <a href="https://github.com/shoen1x/HEAD" class="font-medium underline"
              ><img
                src={Github.src}
                width="28"
                height="28"
                alt="lambang github"
              /></a
            >
          </div>
        </div>
      </div>
      <MinDisyorkan />
    </section>
  </main>
</div>
